<Window x:Class="SQLProject.Insert"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SQLProject"
        mc:Ignorable="d"
        Title="Add values to database" Height="287" Width="380">
    <Grid Margin="5,5,5,5">

        <Grid.RowDefinitions>
            <RowDefinition Height="134"></RowDefinition>
            <RowDefinition Height="266"></RowDefinition>
        </Grid.RowDefinitions>

        <Label Content="ID = " Margin="23,6,10,100" BorderBrush="DeepPink" BorderThickness="0.5"/>

        <Label Content="Name" Margin="23,39,-13,237" Grid.RowSpan="2"/>
        <TextBox AcceptsReturn="True" TextWrapping="Wrap"  Margin="68,39,10,67" />


        <Label Content="Description" Margin="0,72,10,204" Grid.RowSpan="2"/>
        <TextBox AcceptsReturn="True" TextWrapping="Wrap" Margin="68,73,10,10" />


        <Button Content="Add" Background="Pink" Margin="171,13,10,226" Grid.Row="1" x:Name="Add" Click="Add_Click"/>
        <Button Background="Pink" Content="Return" Margin="11,14,254,226" x:Name="Return" Click="Return_Click" Grid.Row="1" RenderTransformOrigin="0.479,0.547"></Button>


    </Grid>
</Window>